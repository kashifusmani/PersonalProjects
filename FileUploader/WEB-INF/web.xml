<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="true">
	
	<context-param>
    	<param-name>realm</param-name>
    	<param-value>http://localhost</param-value>
  	</context-param>
  	<context-param>
    	<param-name>returnTo</param-name>
    	<param-value>http://localhost/FileUploader/OpenIdLogin</param-value>
  	</context-param>

	<servlet>
		<servlet-name>AddAccount</servlet-name>
		<servlet-class>com.fileuploader.servlets.AddAccount</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>AddAccount</servlet-name>
		<url-pattern>/AddAccount</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>com.fileuploader.servlets.Login</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/Login</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>OpenIdLoginInitializer</servlet-name>
		<servlet-class>com.fileuploader.servlets.OpenIdLoginInitializer</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>OpenIdLoginInitializer</servlet-name>
		<url-pattern>/OpenIdLoginInitializer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>OpenIdLogin</servlet-name>
		<servlet-class>com.fileuploader.servlets.OpenIdLogin</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>OpenIdLogin</servlet-name>
		<url-pattern>/OpenIdLogin</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>UploadFile</servlet-name>
		<servlet-class>com.fileuploader.servlets.UploadFile</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>UploadFile</servlet-name>
		<url-pattern>/UploadFile</url-pattern>
	</servlet-mapping>
	
		<servlet>
		<servlet-name>GetLastUploadExpenseSummary</servlet-name>
		<servlet-class>com.fileuploader.servlets.GetLastUploadExpenseSummary</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>GetLastUploadExpenseSummary</servlet-name>
		<url-pattern>/GetLastUploadExpenseSummary</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>login_form.jsp</welcome-file><!-- application entry point -->
	</welcome-file-list>


</web-app>

